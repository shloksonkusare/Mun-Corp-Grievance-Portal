# Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/grievance_portal

# JWT Secret for Admin Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production

# WhatsApp Cloud API Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Reverse Geocoding API (Using OpenStreetMap Nominatim - free)
# For production, consider Google Maps API or similar
GEOCODING_API_URL=https://nominatim.openstreetmap.org/reverse
# Optional: Google Maps API Key for better geocoding
GOOGLE_MAPS_API_KEY=

# Duplicate Detection Settings
DUPLICATE_RADIUS_METERS=100
DUPLICATE_TIME_WINDOW_HOURS=24

# Image Settings
MAX_IMAGE_SIZE_MB=5
COMPRESSED_IMAGE_QUALITY=80

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# Upload Directory
UPLOAD_DIR=./uploads
